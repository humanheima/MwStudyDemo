<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <inset>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:propertyName="rotationX" android:valueTo="360" android:valueType="floatType" />
            <!-- you could have other objectAnimator elements
                 here for "x" and "y", or other properties -->
        </inset>
    </item>
    <item android:state_pressed="false">
        <inset>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:propertyName="rotationX" android:valueTo="0" android:valueType="floatType" />
        </inset>
    </item>
</selector>